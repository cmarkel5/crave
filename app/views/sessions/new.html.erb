<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">  
      <div class="well form">
        <h2 class="text-center">Sign In</h2>
        <%= form_for(:session, url: sessions_path) do |f| %>

            <div>
              <%= f.label :email %></br>
              <%= f.text_field :email, class: 'text-input', autofocus: true %>
            </div>
            <br />

            <div>
              <%= f.label :password %></br>
              <%= f.password_field :password, class: 'text-input' %>
            </div>
            <br />

            <%= f.submit 'Sign in', class: 'btn btn-sm btn-primary btn-block' %>
          <% end %>
          </br>

        <p>New user? <%= link_to "Sign up", signup_path %></p>
      </div>
    </div>
  </div>
</div>

